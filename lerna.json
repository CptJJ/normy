{
  "version": "independent",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "node_modules/**",
        "packages/*/node_modules/**",
        "packages/*/dist/**",
        "packages/*/es/**",
        "packages/*/lib/**"
      ]
    }
  }
}
