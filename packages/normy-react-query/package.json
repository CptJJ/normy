{
  "name": "@normy/react-query",
  "version": "0.2.0",
  "description": "react-query addon for normy - Automatic normalisation and data updates for data fetching libraries",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "unpkg": "dist/normy.min.js",
  "repository": "git@github.com:klis87/normy.git",
  "author": "Konrad Lisiczynski <klisiczynski@gmail.com>",
  "license": "MIT",
  "typings": "types/index.d.ts",
  "keywords": [
    "normalisation",
    "react-query"
  ],
  "homepage": "https://github.com/klis87/normy",
  "bugs": {
    "url": "https://github.com/klis87/normy/issues"
  },
  "scripts": {
    "clean": "rimraf es lib dist",
    "lint": "eslint 'src/**'",
    "test": "jest src",
    "test:cover": "jest --coverage src",
    "test-types": "tsc types/index.d.spec.ts --noEmit --strict --lib es2015",
    "build:commonjs": "cross-env BABEL_ENV=cjs babel src --out-dir lib --ignore 'src/**/*.spec.js'",
    "build:es": "cross-env babel src --out-dir es --ignore 'src/**/*.spec.js'",
    "build:umd": "webpack --mode development -o dist --output-filename normy-react-query.js",
    "build:umd:min": "webpack --mode production -o dist --output-filename normy-react-query.min.js",
    "build": "npm-run-all clean -p build:commonjs build:es build:umd build:umd:min",
    "build:watch": "nodemon --watch src --ignore src/**/*.spec.js --exec 'yarn run build:es'",
    "prepublish": "yarn run build"
  },
  "peerDependencies": {
    "@tanstack/react-query": ">=4.22.0"
  },
  "dependencies": {
    "@normy/core": "^0.2.0"
  },
  "devDependencies": {
    "@babel/cli": "7.12.8",
    "@babel/core": "7.12.9",
    "@babel/preset-env": "7.12.7",
    "@tanstack/react-query": "4.22.0",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "cross-env": "7.0.2",
    "eslint": "7.14.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "jest": "26.6.3",
    "nodemon": "2.0.6",
    "npm-run-all": "4.1.5",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "rimraf": "3.0.2",
    "typescript": "4.2.4",
    "webpack": "5.9.0",
    "webpack-cli": "4.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
